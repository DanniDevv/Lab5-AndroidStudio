<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/Celeste">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Operaciones Aritmeticas"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Primer valor:"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/txtValor1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/Gris"
        android:ems="10"
        android:inputType="textPersonName|numberDecimal"
        android:text=""
        android:textColor="@color/black"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Segundo Valor:"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtValor2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/Gris"
        android:ems="10"
        android:inputType="textPersonName|numberDecimal"
        android:text=""
        android:textColor="@color/black"
        android:gravity="center"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <RadioButton
            android:id="@+id/radioSuma"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="50dp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioResta"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="50dp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioProducto"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:text="x"
            android:textSize="50dp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioDivision"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="50dp"
            android:textStyle="bold" />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultado:"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtResultado"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/Gris"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName|numberDecimal"
        android:text=""
        android:textColor="@color/black"
        android:gravity="center"/>

</LinearLayout>